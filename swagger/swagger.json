              },
              "devices": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "User": {
                      "type": "string",
                      "example": 6289685021291
                    },
                    "Agent": {
                      "type": "integer",
                      "example": 0
